<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/ic_sheet"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="150dp">
            <TextView
                android:id="@+id/id_barbeiro"
                android:layout_marginStart="2dp"
                android:textColor="#585555"
                android:textStyle="bold|italic"
                android:text="Barbeiro:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/id_dia"
                android:layout_marginStart="2dp"
                android:textColor="#FF585555"
                android:textStyle="bold|italic"
                android:text="Dia:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#FF585555"
                android:textStyle="bold|italic"
                android:id="@+id/id_horario"
                android:layout_marginStart="2dp"
                android:text="Horario:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#FF585555"
                android:textStyle="bold|italic"
                android:id="@+id/id_service"
                android:layout_marginStart="2dp"
                android:text="Serviço:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#FF585555"
                android:textStyle="bold|italic"
                android:id="@+id/id_price"
                android:layout_marginStart="2dp"
                android:text="Preço:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>